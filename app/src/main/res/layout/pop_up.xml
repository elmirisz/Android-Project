<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">


    <ImageView
        android:id="@+id/changePhotoPop"
        android:layout_width="wrap_content"
        android:layout_height="293dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image2" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:background="@color/orange"
        android:text="Next Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePhotoPop">


        <TextView
            android:id="@+id/gridText1"
            android:layout_width="210dp"
            android:layout_height="85dp"
            android:layout_marginBottom="8dp"
            android:text="text 1"
            android:textSize="24sp"

            />

        <TextView
            android:id="@+id/gridText2"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="8dp"

            android:text="text 2"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gridText3"
            android:layout_width="210dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Text 3" />

        <TextView
            android:id="@+id/gridText4"
            android:layout_width="200dp"
            android:layout_height="87dp"
            android:text="Text 4" />

        <TextView
            android:id="@+id/gridText5"
            android:layout_width="211dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Text 5" />

        <TextView
            android:id="@+id/gridText6"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:text="Text 6" />


    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:text="This picture is "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>